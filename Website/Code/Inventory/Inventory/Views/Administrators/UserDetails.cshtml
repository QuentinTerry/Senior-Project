@model Inventory.Models.Users
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>UserDetails</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>
                <Label>User</Label>
            </th>
            <th>
                <Label>Action</Label>
            </th>
            <th></th>

        </tr>
        <tr>
            <td>
                <div class="row">
                    <div class="col-md-2">
                        <label>First Name</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.FirstName, new { MaxLength = 25 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Last Name</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.LastName, new { MaxLength = 25 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Phone</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { MaxLength = 10 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Street</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.Street, new { MaxLength = 25 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>City</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.City, new { MaxLength = 25 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Zip Code</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.ZipCode, new { MaxLength = 5 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label>Email</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.Email, new { MaxLength = 40 })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.TextBoxFor(m => m.RoleID, new { style = "display: none;" })
                        @Html.TextBoxFor(m => m.UserID, new { style = "display: none;" })
                        @Html.TextBoxFor(m => m.UserName, new { style = "display: none;" })
                        @Html.TextBoxFor(m => m.ActiveYN, new { style = "display: none;" })
                    </div>
                   
            </td>
            <td>
                <input type="submit" value="Save" class=" btn-default" formaction=@Url.Action("EditUser") formmethod="post" />
                <hr />
                @Html.ActionLink("Delete", "DeleteUser", "Administrators", new { Model.UserID }, "")
            </td>
            
        </tr>

    </table>
    <br/>
    <hr/>
    <div>
        @Html.ActionLink("Back to Administration", "Administrator", "Administrators")
    </div>
 }
